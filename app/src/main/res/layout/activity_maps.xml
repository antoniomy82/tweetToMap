<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.ajmorales.tweetToMap.viewmodel.TweetViewModel" />

        <variable
            name="mapFragment"
            type="com.google.android.gms.maps.SupportMapFragment" />

        <variable
            name="progressBar"
            type="android.widget.ProgressBar" />

        <variable
            name="progressBarVisibility"
            type="Boolean" />

        <variable
            name="tvSearching"
            type="String" />

        <variable
            name="tvSearchingVisibility"
            type="Boolean" />

        <variable
            name="etSearch"
            type="android.widget.EditText" />

        <variable
            name="btnSearch"
            type="android.widget.Button" />

        <variable
            name="spLifeSapn"
            type="android.widget.Spinner" />

        <variable
            name="searchingElementsVisibility"
            type="Boolean" />

        <variable
            name="tvLifeSpan"
            type="android.widget.TextView" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ADDBFF"
        tools:context=".view.MapsActivity">


        <android.widget.EditText
            android:id="@+id/etSearch"
            android:layout_width="217dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/tvSearch"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="@{searchingElementsVisibility?  View.VISIBLE : View.GONE }" />

        <android.widget.Spinner
            android:id="@+id/sp_lifespan"
            android:layout_width="96dp"
            android:layout_height="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toEndOf="@+id/tvLifespan"
            app:layout_constraintTop_toBottomOf="@+id/etSearch"
            app:layout_constraintVertical_bias="0.0"
            android:visibility="@{searchingElementsVisibility?  View.VISIBLE : View.GONE }" />

        <android.widget.Button
            android:id="@+id/btnSearch"
            android:layout_width="83dp"
            android:layout_height="42dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/btnSearch"
            app:layout_constraintStart_toEndOf="@+id/etSearch"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="@{searchingElementsVisibility?  View.VISIBLE : View.GONE }" />

        <android.widget.TextView
            android:id="@+id/tvLifespan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="8dp"
            android:text="@string/tvLifeSpan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etSearch"
            android:visibility="@{searchingElementsVisibility?  View.VISIBLE : View.GONE }" />

        <android.widget.TextView
            android:id="@+id/tvSearching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@{tvSearching}"
            android:textAlignment="center"
            android:textColor="#E57373"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021"
            android:visibility="@{tvSearchingVisibility?  View.VISIBLE : View.GONE }" />


        <android.widget.ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="150dp"
            android:layout_height="43dp"
            android:indeterminate="true"
            android:max="100"
            android:progress="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063"
            android:visibility="@{progressBarVisibility?  View.VISIBLE : View.GONE }" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sp_lifespan"

                tools:context=".view.MapsActivity">

            </androidx.fragment.app.FragmentContainerView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>